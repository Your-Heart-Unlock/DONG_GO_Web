rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 장소 사진 업로드 규칙
    match /places/{placeId}/{fileName} {
      // 읽기: 모든 사용자 허용
      allow read: if true;

      // 쓰기: 인증된 member/owner만 허용
      allow write: if request.auth != null
                   && request.auth.token.role in ['member', 'owner']
                   && request.resource.size < 5 * 1024 * 1024  // 5MB 제한
                   && request.resource.contentType.matches('image/.*');  // 이미지만 허용

      // 삭제: 인증된 member/owner만 허용
      allow delete: if request.auth != null
                    && request.auth.token.role in ['member', 'owner'];
    }

    // 기타 경로는 모두 차단
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
